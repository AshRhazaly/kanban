<main class="container main-container">
    <section class="container post-container">
      <%= link_to 'New KanBan', new_post_path, class: "btn btn-primary" %>
        <h1 class="page-header">
            Kan your Bans</h1>
        <% @post.each do |post| %>
          <%=link_to post_path(post), class: 'show-link' do %>
            <section class="container well title-block">
                <h2><%= post.title %>
                </h2>
                <%= link_to edit_post_path(post) do %>
                  <span class="glyphicon glyphicon-pencil edit-post"></span>
                <% end %>

                <%= link_to post_path(post), method: :delete do %>
                  <span class="glyphicon glyphicon-trash delete-post"></span>
                <% end %>

            </section>
          <% end %>
        <% end %>
    </section>
</main>
